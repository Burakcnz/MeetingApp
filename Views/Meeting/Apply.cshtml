@{
    ViewData["Title"] = "Başvuru Sayfası";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h1 class="text-center">Başvuru Ekranı</h1>
                </div>
                <div class="card-body">
                    <form method="post" action="/Meeting/Apply">
                        <div class="form-group">
                            <label for="name">Ad Soyad</label>
                            <input type="text" class="form-control m-2" id="name" name="FullName">
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" class="form-control m-2" id="email" name="Email">
                        </div>
                        <div class="form-group">
                            <label for="phone">Telefon</label>
                            <input type="tel" class="form-control m-2" id="phone" name="Phone">
                        </div>
                        <div class="form-group">
                            <label for="application">Başvuru</label>
                            <select class="form-control m-2" id="application" name="Answer">
                                <option value="True">Evet</option>
                                <option value="False">Hayır</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary m-2">Başvur</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
