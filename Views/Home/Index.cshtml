@{
    ViewData["Title"] = "Ana Sayfa";
    int katilimciSayisi = Convert.ToInt32(ViewData["KatilimciSayisi"]);
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card text-center">
                <div class="card-header bg-primary text-white">
                    <h1 class="text-center">Merhaba</h1>
                </div>
                <div class="card-body">
                    <h2 class="text-center mb-4">Toplantı Katılım Ekranına Hoş Geldiniz</h2>
                    <h3 class="text-center mb-4">Toplantı Durumunuzu Bildiriniz</h3>
                    <p>Aktif Katılımcı Sayısı : @katilimciSayisi</p>
                    <a class="btn btn-primary btn-block" asp-controller="Meeting" asp-action="Apply">Başvuru Yap</a>
                </div>
            </div>
        </div>
    </div>
</div>
